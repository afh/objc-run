function createXcodeProjectPackage
{
	mkdir "$1"
	writePBXFile "$1/project.pbxproj"
}

function createProjectDirectory
{
	mkdir -p "$1"
	createXcodeProjectPackage "$1/clitest.xcodeproj"
	writePCHfile "$1/clitest-Prefix.pch"
}

main "$@"